<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysTalentCandidateMapper">

    <resultMap type="SysTalentCandidate" id="SysTalentCandidateResult">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="phoneNumber" column="phone_number"/>
        <result property="email" column="email"/>
        <result property="highestEdu" column="highest_edu"/>
        <result property="expectedSalary" column="expected_salary"/>
        <result property="industry" column="industry"/>
        <result property="post" column="post"/>
        <result property="skillTags" column="skill_tags"/>
        <result property="resumeFilename" column="resume_filename"/>
        <result property="resumeUrl" column="resume_url"/>
        <result property="deptId" column="dept_id"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectSysTalentCandidateVo">
        select id,
               name,
               phone_number,
               email,
               highest_edu,
               expected_salary,
               industry,
               post,
               skill_tags,
               resume_filename,
               resume_url,
               dept_id,
               create_by,
               create_time,
               update_by,
               update_time,
               remark
        from sys_talent_candidate
    </sql>

    <select id="selectSysTalentCandidateList" parameterType="TalentCandidateBo" resultMap="SysTalentCandidateResult">
        <include refid="selectSysTalentCandidateVo"/>
        <where>
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="phoneNumber != null  and phoneNumber != ''">and phone_number = #{phoneNumber}</if>
            <if test="email != null  and email != ''">and email = #{email}</if>
            <if test="highestEdu != null ">and highest_edu = #{highestEdu}</if>
            <if test="expectedSalary != null ">and expected_salary = #{expectedSalary}</if>
            <if test="industry != null  and industry != ''">and industry = #{industry}</if>
            <if test="skillTags != null  and skillTags != ''">and skill_tags = #{skillTags}</if>
            <if test="resumeUrl != null  and resumeUrl != ''">and resume_url = #{resumeUrl}</if>
        </where>
    </select>

</mapper>